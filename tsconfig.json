    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "outDir": "lib/",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "src/tests/**/*.ts", "templates/**/*.ts"]
}
